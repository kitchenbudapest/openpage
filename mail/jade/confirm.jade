//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - //
mixin padding
    td(width = "20px")
    
mixin separator(color, height)
    tr
        td
        +padding
        td(width   = dims.page.width
           height  = height
           bgcolor = color)
        +padding
        td

mixin indicator
    | &nbsp;&nbsp;
    sup
        img(width  = "3px"
            height = "3px"
            src    = images.dot.orange)
    | &nbsp;&nbsp;
    


//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - //
doctype html
html(lang = 'en')

    head
        title Kibu Hackthon 2015 | Confirmation
        style
            include ../css/tinyreset.css
             
    body(bgcolor = colors.coffee)
        font(face  = "sans-serif"
             color = colors.chocolate)
            table(width       = "100%"
                  border      = "0"
                  cellpadding = "0"
                  cellspacing = "0")
                // header  
                tr
                    td
                        // header-frame
                        table(width       = "100%"
                              border      = "0"
                              cellpadding = "0"
                              cellspacing = "0"
                              background  = prefix + 'gradient.png')
                            tr(height = "50px")
                            tr
                                td
                                +padding
                                td(width = dims.page.width)
                                    img(src = prefix + 'logo_graphics.png'
                                        alt = "[:] Kibu Hackathon 015'")
                                +padding
                                td
                // body        
                tr
                    td
                        // body-frame
                        table(width       = "100%"
                              border      = "0"
                              cellpadding = "0"
                              cellspacing = "0"
                              bgcolor     = colors.cream)
                            tr(height = "30px")
                            tr
                                td
                                +padding
                                td(width = dims.page.width)
                                   font(color = colors.orange
                                        size  = "7")
                                        | Welcome
                                +padding
                                td
                            tr(height = "10px")
                            +separator(colors.orange,
                                       dims.border.hairline)
                            tr(height = "50px")
                            tr
                                td
                                +padding
                                td(width = dims.page.width)
